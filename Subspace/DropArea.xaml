                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" Color="Red"
                                              Opacity=".5" BlurRadius="4" RenderingBias="Performance" />
                        </Setter.Value>
                    </Setter>
                </Style>
